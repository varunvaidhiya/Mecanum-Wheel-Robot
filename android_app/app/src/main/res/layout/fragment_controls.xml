<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Emergency Stop Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_emergency_stop"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:text="@string/emergency_stop"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/status_error"
        app:cornerRadius="70dp"
        app:elevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Mode Toggle Group -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/btn_teleop"
        app:layout_constraintTop_toBottomOf="@id/btn_emergency_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_teleop"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_teleop" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_autonomous"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_autonomous" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manual"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_manual" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Virtual Joystick -->
    <com.varunvaidhiya.robotcontrol.ui.views.VirtualJoystickView
        android:id="@+id/virtual_joystick"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"/>

    <TextView
        android:id="@+id/text_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear: 0.00 | Angular: 0.00"
        android:textColor="@color/text_secondary"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/virtual_joystick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
