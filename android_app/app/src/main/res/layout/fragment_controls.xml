<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Emergency Stop Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_emergency_stop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="@string/emergency_stop"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="#D32F2F"
        app:cornerRadius="60dp"
        app:icon="@android:drawable/ic_menu_help"
        app:iconSize="32dp"
        app:iconGravity="textTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Mode Toggle Group -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:checkedButton="@id/btn_teleop"
        app:layout_constraintTop_toBottomOf="@id/btn_emergency_stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_teleop"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_teleop" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_autonomous"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_autonomous" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manual"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mode_manual" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <!-- Virtual Joystick -->
    <com.varunvaidhiya.robotcontrol.ui.views.VirtualJoystickView
        android:id="@+id/virtual_joystick"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/text_values"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Linear: 0.00 | Angular: 0.00"
        app:layout_constraintBottom_toTopOf="@id/virtual_joystick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
