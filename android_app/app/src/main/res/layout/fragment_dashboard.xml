<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Top Bar: Connection Status -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <View
                android:id="@+id/status_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/shape_circle_red" />

            <TextView
                android:id="@+id/text_connection_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Disconnected"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_ip_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP: --"
                android:textColor="#757575" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Camera Feed -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintTop_toBottomOf="@id/card_connection">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <com.varunvaidhiya.robotcontrol.ui.views.MjpegView
                android:id="@+id/mjpeg_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Live Camera Feed"
                android:textColor="#FFFFFF"
                android:background="#80000000"
                android:padding="4dp"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"/>
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Detailed Metrics Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/card_camera"
        app:layout_constraintBottom_toBottomOf="parent">
        
        <!-- Row 1: Velocity & Health -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_velocity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"/>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motor Status\n(Placeholder)"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
